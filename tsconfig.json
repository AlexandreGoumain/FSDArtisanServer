{
    "compilerOptions": {
        "target": "ES2020", // Version JS générée
        "module": "commonjs", // Pour Node.js
        "rootDir": "./src", // Dossier source
        "outDir": "./dist", // Dossier de sortie compilée
        "strict": true, // Active toutes les vérifications strictes
        "esModuleInterop": true, // Pour importer les modules CommonJS
        "forceConsistentCasingInFileNames": true, // Sensible à la casse
        "skipLibCheck": true // Ignore les vérifications de type dans node_modules
    },
    "include": ["src"], // Inclure tous les fichiers dans src/
    "exclude": ["node_modules", "dist"] // Exclure les dossiers inutiles
}
